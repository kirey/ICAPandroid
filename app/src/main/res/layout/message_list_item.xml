<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/deleteSelectionLinLay"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <CheckBox
            android:id="@+id/checkForDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageBoxLinLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_read_background"
        android:orientation="vertical"
        android:padding="10dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/alertImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/piggy_bank_icon"
                />

            <TextView
                android:id="@+id/titleItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dateItemTextView"
                android:layout_alignBottom="@+id/dateItemTextView"
                android:layout_toEndOf="@+id/alertImageView"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="Title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2001"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

        </RelativeLayout>

      <!--  <TextView
            android:id="@+id/timeItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dateItemTextView"
            android:text="00:45"
            android:textStyle="bold"
            android:visibility="gone" />-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msgMessageIdItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="Message id: " />

        <TextView
            android:id="@+id/msgAddressItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="Address: "
            />

        <TextView
            android:id="@+id/msgLocationItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="Company location: " />

        <TextView
            android:id="@+id/msgTargetItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="Forecast peak for " />

        <TextView
            android:id="@+id/msgBodyItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Message body" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>